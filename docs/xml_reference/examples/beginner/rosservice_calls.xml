<?xml version="1.0" encoding="UTF-8"?>

<!-- This example application shows a minimal project.

A UR5 idles for 3 seconds. Then the application terminates.
-->

<pitasc>

    <models>
        <!-- Include pitasc -->
        <include package="pitasc_library" file="models/pitasc.xml"/>

        <!-- Include the UR5 -->
        <include package="pitasc_library" file="universal_robots/ur.xml"/>

        <!-- Include the idle skill -->
        <include package="pitasc_library" file="models/skills.xml"/>

    </models>

    <!-- Create a project -->
    <clone prototype="project">

        <member id="configuration">
            <!-- Use the default configuration with recommended settings -->
            <clone id="configuration" prototype="default_configuration"/>
        </member>

        <member id="environment">
            <!-- Add a UR5 -->
            <clone prototype="robot_ur5"/>
        </member>

        <member id="applications">

            <!-- Use a skill sequence as a container -->
            <clone prototype="skill_sequence">

                <!-- Use the UR5 for this skill (and for its subskill) -->
                <member id="robot" reference_id="environment.robot_ur5"/>

                <!-- Add subskill(s) -->
                <member id="skills">
                    <clone prototype="skill_ptp">
                        <member id="target_joint_state">0, -1.57, 1.57, 0, -1.57, -1.57</member>
                    </clone>

                    <!-- Idle for 3 seconds -->
                    <clone prototype="skill_hold_duration">
                        <member id="duration">3.0</member>
                        <member id="tool_frame">tool</member>
                        <member id="scripts">
                            <clone prototype="script_call_empty_srvs">
                                <member id="service_name">test_srv</member>
                            </clone>
                            <clone prototype="script_call_trigger_srvs">
                                <member id="service_name">test</member>
                                <member id="retries">5</member>
                            </clone>
                            <clone prototype="script_call_setbool_srvs">
                                <member id="retries">5</member>
                                <member id="service_name">test_bool</member>
                                <member id="value">True</member>
                            </clone>
                        </member>
                    </clone>

                    <clone prototype="skill_ptp">
                        <member id="target_joint_state">0, 1.57, 1.57, 0, -1.57, -1.57</member>
                    </clone>

                    <clone prototype="skill_hold_duration">
                        <member id="duration">3.0</member>
                        <member id="tool_frame">tool</member>
                        <member id="scripts">
                            <clone prototype="script_call_empty_srvs">
                                <member id="service_name">test_srv</member>
                                <member id="on_start">false</member>
                            </clone>
                            <clone prototype="script_call_trigger_srvs">
                                <member id="retries">6</member>
                                <member id="service_name">test</member>
                                <member id="on_start">false</member>
                            </clone>
                            <clone prototype="script_call_setbool_srvs">
                                <member id="retries">6</member>
                                <member id="service_name">test_bool</member>
                                <member id="value">False</member>
                                <member id="on_start">false</member>
                            </clone>
                        </member>
                    </clone>

                </member>

            </clone>

        </member>

    </clone>

</pitasc>
