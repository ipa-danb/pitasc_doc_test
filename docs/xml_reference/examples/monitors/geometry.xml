<?xml version="1.0" encoding="UTF-8"?>

<!-- This example application shows the usage of monitors.

-->

<pitasc>

    <models>
        <include package="pitasc_library" file="models/pitasc.xml"/>
        <include package="pitasc_library" file="models/skills.xml"/>

        <include package="pitasc_library" file="universal_robots/ur.xml"/>
    </models>

    <clone prototype="project">

        <member id="configuration">
            <clone id="configuration" prototype="default_configuration"/>
        </member>

        <member id="environment">
            <clone prototype="robot_ur5">
                <member id="robot_driver.max_velocity">0.2</member>
                <member id="robot_driver.max_acceleration">2.0</member>
            </clone>
        </member>

        <member id="applications">
            <clone prototype="skill_sequence">

                <member id="robot" reference_id="environment.robot_ur5"/>

                <member id="skills">

                    <clone prototype="skill_wait_for_transform">
                        <member id="parent_frame">target2</member>
                        <member id="frame">tool</member>
                    </clone>

                    <clone prototype="skill_lin">
                        <member id="tool_frame">tool</member>
                        <member id="target_frame">target1</member>
                    </clone>

                    <clone prototype="skill_cartesian_tracking">
                        <member id="tool_frame">tool</member>
                        <member id="target_frame">target2</member>

                        <!-- Quit after 3 cm -->
                        <member id="monitors">
                            <clone prototype="monitor_distance">
                                <member id="reference_frame">target1</member>
                                <member id="frame">tool</member>
                                <member id="coordinates">y</member>
                                <member id="distances">0.03</member>
                                <member id="operator">absolute_greater</member>
                            </clone>
                        </member>

                    </clone>

                    <clone prototype="skill_cartesian_tracking">
                        <member id="tool_frame">tool</member>
                        <member id="target_frame">target1</member>

                        <!-- Quit after 1 cm -->
                        <member id="monitors">
                            <clone prototype="monitor_relative_distance">
                                <member id="reference_frame">target1</member>
                                <member id="frame">tool</member>
                                <member id="coordinates">y</member>
                                <member id="distances">0.01</member>
                                <member id="operator">absolute_greater</member>
                            </clone>
                        </member>

                    </clone>

                    <clone prototype="skill_cartesian_tracking">
                        <member id="tool_frame">tool</member>
                        <member id="target_frame">target2</member>

                        <!-- Quit when tool left the box around target1 -->
                        <member id="monitors">
                            <clone prototype="monitor_frame_in_box">
                                <member id="box_center_frame">target1</member>
                                <member id="frame">tool</member>
                                <member id="edge_length_xyz">0.05, 0.05, 0.05</member>
                            </clone>
                        </member>

                    </clone>

                </member>

            </clone>
        </member>

    </clone>

</pitasc>
