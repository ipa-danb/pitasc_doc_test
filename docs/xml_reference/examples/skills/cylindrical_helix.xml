<?xml version="1.0" encoding="UTF-8"?>

<!-- This example application shows the usage of the skill_cylindrical_helix.

It performs a rotation around the helical axis and a translation along the same
axis, resulting in a "screwdriver" motion.
-->

<pitasc>

    <models>
        <include package="pitasc_library" file="models/pitasc.xml"/>
        <include package="pitasc_library" file="models/skills.xml"/>

        <include package="pitasc_library" file="universal_robots/ur.xml"/>
    </models>

    <clone prototype="project">

        <member id="configuration">
            <clone id="configuration" prototype="default_configuration"/>
        </member>

        <member id="environment">
            <clone prototype="robot_ur5"/>
        </member>

        <member id="applications">
            <clone prototype="skill_sequence">

                <member id="robot" reference_id="environment.robot_ur5"/>

                <member id="skills">

                    <clone prototype="skill_cylindrical_helix">
                        <member id="tool_frame">tool</member>
                        <member id="pivot_frame">target1</member>
                        <member id="radius">0.05</member>
                        <member id="height">0.2</member>
                        <!-- <member id="tool_direction.a">1.57</member> --> <!-- change tool orientation -->
                    </clone>

                </member>
            </clone>
        </member>
    </clone>
</pitasc>
