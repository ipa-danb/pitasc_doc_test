<?xml version="1.0" encoding="UTF-8"?>

<pitasc>

    <models>
        <include package="pitasc_library" file="skills/skill_slide.xml"/>

        <type id="skill_guarded_slide" prototype="skill_slide">
            <meta>
                <member id="description">A skill that moves along a fixed frame axis until it measures a certain force</member>
            </meta>

            <data>

                <type id="max_forces" prototype="float_csv">
                    <meta>
                        <member id="description">Force in move direction that stops the slide.</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>10.0</data>
                </type>

                <type id="operator" prototype="operator">
                    <meta>
                        <member id="description">Defines the stop condition.</member>
                        <member id="visibility">expert</member>
                    </meta>
                    <data>absolute_greater</data>
                </type>

                <member id="monitors">
                    <clone prototype="monitor_threshold">
                        <member id="provider" reference_id="force.collections.force_chain.chains[0]"/>
                        <member id="coordinates" reference_id="move.axes"/>
                        <member id="prefix" reference_id="force.collections.force_chain.prefix"/>
                        <member id="operator" reference_id="operator"/>
                        <member id="thresholds" reference_id="max_forces"/>
                    </clone>
                </member>

            </data>
        </type>

    </models>

</pitasc>
