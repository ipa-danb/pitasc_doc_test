<?xml version="1.0" encoding="UTF-8"?>

<pitasc>

    <models>
        <include package="pitasc_library" file="skills/skill_cartesian_tracking.xml"/>

        <type id="skill_hold_pose" prototype="skill_cartesian_tracking">
            <meta>
                <member id="description">Hold the position/orientation on selected axes.</member>
            </meta>

            <data>

                <!-- Private -->
                <member id="scripts">
                    <clone prototype="script_temp_frame">
                        <member id="frame" reference_id="target_frame"/>
                        <member id="source" reference_id="tool_frame"/>
                        <member id="parent" reference_id="robot.base_link"/>
                    </clone>
                </member>
                <clone id="prefixed_target_frame" prototype="string_concatenation">
                    <clone prototype="string_parameter">_tmp_</clone>
                    <type id="runtime_id" prototype="string_parameter"/> <!-- autogenerated -->
                </clone>
                <member id="target_frame" reference_id="prefixed_target_frame"/>
                <member id="target_frame.meta.visibility">hidden</member>
<!--
                <member id="max_linear_velocity">0.1</member>
                <member id="linear_controller_gain">3</member>
                <member id="max_angular_velocity">0.5</member>
                <member id="angular_controller_gain">3</member>
 -->
            </data>
        </type>

        <type id="skill_hold_duration" prototype="skill_hold_pose">
            <meta>
                <member id="description">Hold the position/orientation on selected axes for duration time.</member>
            </meta>
            <data>
                <type id="duration" prototype="float_parameter">
                    <meta>
                        <member id="description">Skill duration in [s].</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>1.0</data>
                </type>

                <member id="monitors">
                    <clone prototype="monitor_duration">
                        <member id="duration" reference_id="duration"/>
                    </clone>
                </member>
            </data>
        </type>

    </models>

</pitasc>
