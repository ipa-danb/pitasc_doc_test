<?xml version="1.0" encoding="UTF-8"?>

<pitasc>

    <models>
        <include package="pitasc_library" file="skills/skill_cartesian_tracking.xml"/>

        <type id="skill_lin" prototype="skill_cartesian_tracking">
            <meta>
                <member id="description">Aligns the tool frame with a target frame</member>
                <member id="visibility">basic</member>
            </meta>

            <data>

                <type id="positioning_accuracy" prototype="float_csv">
                    <meta>
                        <member id="description">Positioning accuracy for x y z a b c in m resp. rad</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>0.001, 0.001, 0.001, 0.005, 0.005, 0.005</data>
                </type>

                <!-- Coordination -->
                <type id="positioning_monitor" prototype="monitor_distance">
                    <meta>
                        <member id="description">Checks whether the target frame has been reached.</member>
                        <member id="visibility">expert</member>
                    </meta>
                    <data>
                        <member id="reference_frame" reference_id="target_frame"/>
                        <member id="target_offsets" reference_id="target_offsets"/>
                        <member id="frame" reference_id="tool_frame"/>
                        <member id="coordinates" reference_id="axes"/>
                        <member id="distance_coordinates">x, y, z, a, b, c</member>
                        <member id="distances" reference_id="positioning_accuracy" />
                        <member id="operator">absolute_less</member>

                    </data>
                </type>

                <member id="positioning_monitor.distance_coordinates.meta.visibility">expert</member>
                <member id="positioning_monitor.operator.meta.visibility">hidden</member>

                <member id="monitors">
                    <reference reference_id="positioning_monitor"/>
                </member>

            </data>
        </type>

    </models>

</pitasc>
