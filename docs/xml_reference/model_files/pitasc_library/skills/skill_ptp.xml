<?xml version="1.0" encoding="UTF-8"?>

<pitasc>

    <models>
        <include package="pitasc_library" file="skills/skill_joint_space_tracking.xml"/>

        <type id="skill_ptp" prototype="skill_joint_space_tracking">
            <meta>
                <member id="description">Moves the robot to a target joint configuration</member>
            </meta>

            <data>

                <!-- Coordination -->
                <type id="thresholds" prototype="float_csv">
                    <meta>
                        <member id="description">Joint value thresholds. One entry for all or one entry for each joint.</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>0.01</data>
                </type>

                <type id="positioning_monitor" prototype="monitor_control_error">
                    <meta>
                        <member id="description">Checks whether the target joint state has been reached</member>
                        <member id="visibility">expert</member>
                    </meta>
                    <data>
                        <member id="controllers" reference_id="tasks.tracking.controllers"/>
                        <member id="coordinates" reference_id="tasks.tracking.coordinates"/><!-- already prefixed -->
                        <member id="thresholds" reference_id="thresholds"/>
                    </data>
                </type>

                <member id="monitors">
                    <reference reference_id="positioning_monitor"/>
                </member>

            </data>
        </type>

    </models>

</pitasc>
