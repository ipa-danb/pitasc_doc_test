<?xml version="1.0" encoding="UTF-8"?>

<pitasc>

    <models>
        <include package="pitasc_library" file="models/pitasc.xml"/>
        <include package="pitasc_library" file="skills/skill_idle.xml"/>

        <type id="skill_user_confirm" prototype="skill_idle">
            <meta>
                <member id="description">Opens a dialog window to receive confirmation from the user.</member>
                <member id="categories">user</member>
            </meta>

            <data>

                <type id="title" prototype="string_parameter">
                    <meta>
                        <member id="description">The event to be triggered on success.</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>Confirmation required</data>
                </type>
                <type id="text" prototype="string_parameter">
                    <meta>
                        <member id="description">The event to be triggered on failure.</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>Proceed with application?</data>
                </type>
                <type id="ignore" prototype="bool_parameter">
                    <meta>
                        <member id="description">Parameter to ignore this skill and fire the (success) event immediately</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>False</data>
                </type>
                <type id="event" prototype="string_parameter">
                    <meta>
                        <member id="description">The event to be triggered on success.</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>succeeded</data>
                </type>
                <type id="reject_event" prototype="string_parameter">
                    <meta>
                        <member id="description">The event to be triggered on failure.</member>
                        <member id="visibility">basic</member>
                    </meta>
                    <data>preempted</data>
                </type>

                <member id="monitors">
                    <clone prototype="monitor_user_confirm">
                        <member id="title" reference_id="title"/>
                        <member id="text" reference_id="text"/>
                        <member id="event" reference_id="event"/>
                        <member id="ignore" reference_id="ignore"/>
                        <member id="reject_event" reference_id="reject_event"/>
                    </clone>
                </member>
            </data>
        </type>

    </models>

</pitasc>
